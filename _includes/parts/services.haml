        .row
          .col.l6.m6.s12.wow.fadeIn
            .card.services__card.waves-effect
              .card-content.black-text
                .btn-floating.btn-large.yellow.darken-3.left.pulse
                  %i.material-icons.services__card--icon place
                .card-title.grey-text.text-darken-4 {{ site.text.content.block-4-title }}
                .services__card--text
                  {{ site.text.content.block-4 }}
